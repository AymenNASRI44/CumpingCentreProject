{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('loginstyle/styleregister.css') }}">
{% endblock %}

{% block body %}
<div class="wrapper">
    <form method="post">
        <h2>Inscription</h2>

        <!-- Affichage des erreurs du formulaire -->
        {% if form_errors(registrationForm) %}
            <div class="alert alert-danger" role="alert">
                {{ form_errors(registrationForm) }}
            </div>
        {% endif %}

        <!-- Champ email -->
        <div class="input-field">
            {{ form_widget(registrationForm.email, {
                attr: { placeholder: 'Entrez votre email', class: 'form-control' }
            }) }}
            
        </div>

        <!-- Champ nom -->
        <div class="input-field">
            {{ form_widget(registrationForm.nom, {
                attr: { placeholder: 'Entrez votre nom', class: 'form-control' }
            }) }}
            
        </div>

        <!-- Champ prénom -->
        <div class="input-field">
            {{ form_widget(registrationForm.prenom, {
                attr: { placeholder: 'Entrez votre prénom', class: 'form-control' }
            }) }}
           
        </div>

        <!-- Champ région -->
        <div class="input-field">
            {{ form_widget(registrationForm.nom_region, {
                attr: { class: 'form-control select-field custom-select' }
            }) }}
            
        </div>

        <!-- Champ mot de passe -->
        <div class="input-field">
            {{ form_widget(registrationForm.plainPassword, {
                attr: { placeholder: 'Entrez votre mot de passe', class: 'form-control' }
            }) }}
          
        </div>

        <!-- Champ accepter les termes -->
        <div class="forget">
            {{ form_widget(registrationForm.agreeTerms) }}
          
        </div>

        <!-- Bouton s'inscrire -->
        <button type="submit">S'inscrire</button>

        <!-- Lien pour se connecter -->
        <div class="register">
            <p>Déjà un compte ? <a href="{{ path('app_login') }}">Connectez-vous</a></p>
        </div>
    </form>
</div>
{% endblock %}
